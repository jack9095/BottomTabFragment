<ScrollView
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/ll_tab3"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	 <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >
		    <TextView
				android:id="@+id/tv_secSex"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Please select Sex:"
				android:layout_marginTop="15dp"
				android:layout_alignParentLeft="true" />
		    
			<RadioGroup
				android:id="@+id/rgp_sex"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/tv_secSex">
				<RadioButton
					android:id="@+id/rbu_male"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="male" />
				<RadioButton
					android:id="@+id/rbu_female"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="female" />
			</RadioGroup>
		</RelativeLayout>	
		
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:layout_marginTop="20dp">
			<TextView
				android:id="@+id/tv_secInterst"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="35dp"
				android:text="Please select interest:"/>
			
			<LinearLayout
				android:id="@+id/rgb_interest"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_toRightOf="@+id/tv_secInterst">
				<CheckBox
					android:id="@+id/cb_eat"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Eat" />
				<CheckBox
					android:id="@+id/cb_play"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Play" />
				<CheckBox
					android:id="@+id/cb_sleep"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Sleep" />
			</LinearLayout>
		</RelativeLayout>
	
		<Button
		    android:id="@+id/bu_ok"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="100dip"
		    android:text="OK" />
	
	</LinearLayout>
</ScrollView> 